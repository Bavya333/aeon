<?xml version="1.0"?>
<window id="500">
  <defaultcontrol always="true">50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <views>50,551</views>
  <controls>
    <control type="multiimage">
      <include>BackgroundVarsGlobal</include>
      <include>BackgroundVarsMusic</include>
      <visible>IsEmpty(ListItem.property(fanart_image))</visible>
    </control>
    <control type="largeimage" id="102">
      <include>FullscreenDimensions</include>
      <visible>[Control.IsVisible(57) | Control.IsVisible(50)| Control.IsVisible(551)] + !IsEmpty(ListItem.property(fanart_image)) + Skin.HasSetting(musicfanart)</visible>
      <fadetime>400</fadetime>
      <texture background="true">$INFO[ListItem.property(fanart_image)]</texture>
      <include>Animation_FanartFade</include>
    </control>
    <control type="group">
      <visible>![Window.IsActive(musicinformation) | Window.IsActive(movieinformation)]</visible>
      <include>FullscreenDimensions</include>
      <include>Animation_OpenCloseZoom</include>
      <include>Furniture_Time</include>
      <include>Furniture_NowPlayingWidget</include>
      <include>Furniture_MediaPanel</include>
      <include>Viewtype_List</include>
      <include>Viewtype_LowList</include>
    </control>
    <include>MediaMenu</include>
    <include>Furniture_DarkGradient</include>
    <include>Background_ContextBlack</include>
    <include condition="Skin.HasSetting(debug)">Furniture_Debug</include>
    <include condition="Skin.HasSetting(DebugGrid)">Furniture_DebugGrid</include>
  </controls>
</window>
