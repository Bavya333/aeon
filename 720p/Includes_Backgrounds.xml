	</include>
	<include name="MediaBackdropsMovies">
		<control type="multiimage">
			<include>BackgroundVarsGlobal</include>
			<include>BackgroundVarsMovies</include>
		</control>
	</include>
	<include name="MediaBackdropsTV">
		<control type="multiimage">
			<include>BackgroundVarsGlobal</include>
			<include>BackgroundVarsTV</include>
		</control>
	</include>
	<include name="CurtainsBackdrop">
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<timeperimage>20000</timeperimage>
			<randomize>true</randomize>
			<fadetime>1000</fadetime>
			<visible>[Skin.HasSetting(moviecurtains) + Container.Content(movies)] | [Skin.HasSetting(tvcurtains) + Window.IsActive(videolibrary) + Container.Content(tvshows)] | [Skin.HasSetting(tvseasonscurtains) + Window.IsActive(videolibrary) + Container.Content(seasons)] | [Skin.HasSetting(tvepisodescurtains) + Window.IsActive(videolibrary) + Container.Content(episodes)] | [Skin.HasSetting(musiccurtains) + Window.IsActive(musiclibrary)]</visible>
			<include>Animation_BackgroundFade</include>
			<icon>special://skin/media/backdrops/multiplex/curtains.png</icon>
			<thumb>$INFO[Skin.String(CustomCurtains)]</thumb>
			<imagepath>special://skin/media/backdrops/multiplex/curtains.png</imagepath>
			<info>Skin.String(CustomCurtains)</info>
		</control>
	</include>
</includes>