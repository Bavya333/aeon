<includes>
	<!-- This are the extra includes for the multiplex title mod -->
	<include name="TitleModVars">
		<width>1070</width>
		<posy>8</posy>
		<font>Font_MultiplexTitleMod</font>
		<textcolor>FFD0D0D0</textcolor>
	</include>
	
	<include name="TitleModVarsBig">
		<width>1070</width>
		<posy>4</posy>
		<font>Font_MultiplexTitleModBig</font>
		<textcolor>FFFFFFFF</textcolor>
	</include>

	<include name="TitleModMovies">
		<control type="label">
			<include>TitleModVars</include>
			<posx>105</posx>
			<align>center</align>
			<label>$INFO[ListItem.Tagline]</label>
			<visible>Skin.HasSetting(showtitle)</visible>
		</control>
		<control type="label">
			<include>TitleModVars</include>
			<posx>105</posx>
			<align>center</align>
			<label>$INFO[ListItem.Title]</label>
			<visible>!Skin.HasSetting(showtitle)</visible>
		</control>

	</include>

	<include name="TitleModTV">
		<control type="group">

			<!-- Title TV Shows-->
			<control type="label">
				<include>TitleModVarsBig</include>
				<posx>1175</posx>
				<align>right</align>
				<label>$INFO[ListItem.TVShowTitle]</label>
				<visible>Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)</visible>
			</control>

			<!-- Title TV Seasons-->
			
			<control type="label">
				<include>TitleModVars</include>
				<posx>105</posx>
				<align>left</align>
				<label>$LOCALIZE[31432] $INFO[ListItem.Season]</label>
				<visible>Container.Content(seasons) + !IsEmpty(ListItem.Title)</visible>
			</control>

			<control type="label">
				<include>TitleModVars</include>
				<posx>105</posx>
				<align>left</align>
				<label>$LOCALIZE[20366]</label>
				<visible>Container.Content(seasons) + IsEmpty(ListItem.Title)</visible>
			</control>

			<!-- Title TV Episodes-->
			<control type="label">
				<include>TitleModVars</include>
				<posx>105</posx>
				<align>left</align>
				<label>$INFO[ListItem.Season].$INFO[ListItem.Episode]: $INFO[ListItem.Title]</label>
				<visible>Container.Content(episodes)</visible>
			</control>
			

		</control>

	</include>

</includes>