    <include name="Object_ExtraThumbsInformations">
        <control type="group">
            <posy>0</posy>
            <posx>405</posx>
            <width>475</width>
            <visible>Skin.HasSetting(extrathumbslayout) + Container.Content(movies)</visible>

            <control type="group">
                <posy>0</posy>
                <visible>Player.HasVideo</visible>
                <control type="videowindow">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>475</width>
                    <height>296</height>
                </control>
            </control>
            <control type="group">
                <visible>!Player.HasVideo</visible>
                <!-- First Column -->
                <control type="group">
                    <posx>0</posx>
                    <width>235</width>

                    <!-- Director -->
                    <control type="group">
                        <posy>0</posy>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoLabel</include>
                            <label>$LOCALIZE[31402]:</label> <!--DIRECTOR -->
                        </control>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoValue</include>
                            <label fallback="31425">$INFO[ListItem.Director]</label>
                            <scroll>true</scroll>
                        </control>
                    </control>
                    <!-- Writer -->
                    <control type="group">
                        <posy>40</posy>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoLabel</include>
                            <label>$LOCALIZE[31401]:</label> <!--Writer -->
                        </control>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoValue</include>
                            <label fallback="31425">$INFO[ListItem.Writer]</label>
                            <scroll>true</scroll>
                        </control>
                    </control>
                    <!-- Year -->
                    <control type="group">
                        <posy>80</posy>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoLabel</include>
                            <label>$LOCALIZE[31436]:</label> <!--Year -->
                        </control>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoValue</include>
                            <label fallback="31425">$INFO[ListItem.Year]</label>
                            <scroll>true</scroll>
                        </control>
                    </control>
                </control>

                <!-- Second column -->
                <control type="group">
                    <posx>245</posx>
                    <width>235</width>

                    <!-- Duration -->
                    <control type="group">
                        <control  type="group">
                            <posy>0</posy>
                            <control type="label">
                                <width>232</width>
                                <include>MultiplexInfoLabel</include>
                                <label>$LOCALIZE[31709]:</label> <!--DURATION-->
                            </control>
                            <control type="label">
                                <width>232</width>
                                <include>MultiplexInfoValue</include>
                                <label fallback="31425">$INFO[ListItem.Duration] $LOCALIZE[12391]</label>
                                <scroll>true</scroll>
                            </control>
                        </control>
                    </control>
                    <!-- Genre -->
                    <control  type="group">
                        <posy>40</posy>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoLabel</include>
                            <label>$LOCALIZE[31438]:</label>
                        </control>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoValue</include>
                            <label fallback="31425">$INFO[ListItem.Genre]</label>
                            <scroll>true</scroll>
                        </control>
                    </control>
                    <!-- Ratings -->
                    <control type="group">
                        <posy>80</posy>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoLabel</include>
                            <label>$LOCALIZE[31408]:</label>
                        </control>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoValue</include>
