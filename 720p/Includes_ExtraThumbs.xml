    <include name="Object_ExtraThumbsInformations">
        <control type="group">
            <posy>0</posy>
            <posx>405</posx>
            <width>475</width>
            <visible>Skin.HasSetting(extrathumbslayout) + Container.Content(movies)</visible>
            <control type="group">
                <!-- First Column -->
                <control type="group">
                    <posx>0</posx>
                    <width>235</width>

                    <!-- Director or OriginalTitle -->
                    <control type="group">
                        <posy>0</posy>
                        <visible>!IsEmpty(ListItem.Director)</visible>
                        <control type="label">
                            <include>ExtraThumbsInfoLabel</include>
                            <label>$LOCALIZE[31402]:</label> <!--DIRECTOR -->
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.Director]</label>
                        </control>
                    </control>
                    <control type="group">
                        <posy>0</posy>
                        <visible>IsEmpty(ListItem.Director)</visible>
                        <control type="label">
                            <include>ExtraThumbsInfoLabel</include>
                            <label>$LOCALIZE[369]:</label> <!--Title -->
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.OriginalTitle]</label>
                            <visible>!IsEmpty(ListItem.OriginalTitle)</visible>
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.Title]</label>
                            <visible>IsEmpty(ListItem.OriginalTitle)</visible>
                        </control>
                    </control>
                    <!-- Writer or Studio -->
                    <control type="group">
                        <posy>40</posy>
                        <visible>!IsEmpty(ListItem.Writer)</visible>
                        <control type="label">
                            <include>ExtraThumbsInfoLabel</include>
                            <label>$LOCALIZE[31401]:</label> <!--Writer -->
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.Writer]</label>
                        </control>
                    </control>
                    <control type="group">
                        <posy>40</posy>
                        <visible>IsEmpty(ListItem.Writer)</visible>
                        <control type="label">
                            <include>ExtraThumbsInfoLabel</include>
                            <label>$LOCALIZE[572]:</label> <!--Studio -->
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.Studio]</label>
                        </control>
                    </control>
                    <!-- Year -->
                    <control type="group">
                        <posy>80</posy>
                        <control type="label">
                            <include>ExtraThumbsInfoLabel</include>
                            <label>$LOCALIZE[345]:</label> <!--Year -->
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.Year]</label>
                        </control>
                    </control>
                </control>

                <!-- Second column -->
                <control type="group">
                    <posx>245</posx>
                    <width>235</width>

                    <!-- Duration -->
                    <control type="group">
                        <posy>0</posy>
                        <control type="label">
                            <width>232</width>
                            <include>MultiplexInfoLabel</include>
                            <label>$LOCALIZE[31709]:</label> <!--DURATION-->
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.Duration,, $LOCALIZE[12391]]</label>
                        </control>
                    </control>
                    <!-- Genre or MPAA Ratings -->
                    <control  type="group">
                        <posy>40</posy>
                        <visible>!IsEmpty(ListItem.Genre)</visible>
                        <control type="label">
                            <include>ExtraThumbsInfoLabel</include>
                            <label>$LOCALIZE[135]:</label>
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.Genre]</label>
                        </control>
                    </control>
                    <control  type="group">
                        <posy>40</posy>
