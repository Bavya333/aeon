                            <include>ExtraThumbsInfoLabel</include>
                            <label>$LOCALIZE[553]:</label>
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.Size]</label>
                        </control>
                    </control>
                </control>

                <control type="textbox">
                    <posx>0</posx>
                    <posy>130</posy>
                    <width>475</width>
                    <height>138</height>
                    <font>Font_MultiplexPlot</font>
                    <info>Control.GetLabel(900004)</info>
                    <textcolor>d0FFFFFF</textcolor>
                    <autoscroll delay="8000" time="2000" repeat="8000">Skin.HasSetting(allowscroll)</autoscroll>
                </control>
            </control>
        </control>
    </include>
