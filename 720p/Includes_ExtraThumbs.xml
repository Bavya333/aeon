                            <include>ExtraThumbsInfoLabel</include>
                            <label>$LOCALIZE[20074]:</label>
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.Mpaa]</label>
                        </control>
                    </control>

                    <!-- Ratings or Size -->
                    <control type="group">
                        <posy>80</posy>
                        <visible>!IsEmpty(ListItem.RatingAndVotes)</visible>
                        <control type="label">
                            <include>ExtraThumbsInfoLabel</include>
                            <label>$LOCALIZE[563]:</label>
                        </control>
                        <control type="label">
                            <include>ExtraThumbsInfoValue</include>
                            <label fallback="161">$INFO[ListItem.RatingAndVotes]</label>
                        </control>
                    </control>
                    <control type="group">
                        <posy>80</posy>
                        <visible>IsEmpty(ListItem.RatingAndVotes)</visible>
